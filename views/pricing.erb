	<% content_for :pricing_tab do %>
		<%= "current" %>
	<% end %>
	
	<div class="unit-section">
		<div class="sixteen columns">
			<div class="page-title">
				<h2>GPS Unit</h2>
				<span>Rp. 2 Jt</span>
				<span>+</span>
			</div>
		</div>
	</div>

	<div class="pricing-container">
		<div class="sixteen columns">
			<div class="container pricing-content">
					
					<div class="plan eight columns">
						<div class="plan-name">
							<h2>Basic</h2>
							<span>Rp.100 Rb</span>
						</div>
						<ul class="plan-features">
							<li class="plan-feature">Maximum 3 Unit / akun</li>
							<li class="plan-feature">Report 1 Bulan Terakhir</li>
							<li class="plan-feature">5 SMS Alert / hari</li>
							<li class="plan-feature">1 User Tambahan</li>
							<li class="plan-feature">Support 24x7</li>
						</ul>
					</div>
					<div class="plan eight columns">
						<div class="plan-name">
							<h2>Pro</h2>
							<span>Rp. 150 Rb</span>
						</div>
						<ul>
							<li class="plan-feature">Jumlah Unit Tidak Dibatasi</li>
							<li class="plan-feature">Report 2 Tahun Terakhir</li>
							<li class="plan-feature">SMS Alert Tanpa Batas</li>
							<li class="plan-feature">10 User Tambahan</li>
							<li class="plan-feature">Support 24x7</li>
						</ul>								
					</div>
			</div>
		</div>
	</div>

	<div class="sixteen columns">
		<a href="#inline1" class="a-btn fancybox">
			<span class="a-btn-text">Order</span> 
		</a>					
	</div>					 


	<div id="inline1" style="display: none;">
		<p class="form-message"></p>
		<form class="pure-form pure-form-stacked register-form">
		    <fieldset>
		    	<label for="email">Nama / Nama Perushaan</label>
		        <input size="10" id="name"  placeholder="Nama">
		        <label for="email">Email</label>
		        <input size="10" id="email" type="email" placeholder="Email">

		        <label for="phone">No Telepon</label>
		        <input size="10" id="phone" type="text" placeholder="08211111">

		        <label for="phone">Jumlah unit yang akan dipesan</label>
		        <input size="10" id="unit_ordered" type="number" placeholder="1">

		        <label for="state">Tipe Paket</label>
		        <select id="package_type">
		            <option>Basic</option>
		            <option>Pro</option>
		        </select>


		        <button type="button" class="send-order" class="pure-button pure-button-primary">Submit</button>
		    </fieldset>
		</form>
	</div>

<!-- End Document
	================================================== -->
	<script>
  		navToggle();
	</script>
</body>
</html>


<script type="text/javascript">
	$(document).ready(function() {
	$(".fancybox").fancybox({
		maxWidth	: 300,
		maxHeight	: 600,
		fitToView	: true,
		width		: '100%',
		height		: '70%',
		autoSize	: false,
		closeClick	: false,
		openEffect	: 'none',
		closeEffect	: 'none'
	});
});
</script>

